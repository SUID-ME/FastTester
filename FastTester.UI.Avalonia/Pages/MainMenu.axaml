<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="clr-namespace:FastTester.UI.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FastTester.UI.Avalonia.Pages.MainMenu"
			 x:DataType="vm:MainViewModel">

	<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
		<Button Content="List of tests" Click="Click_TestListView"/>
		<Button Content="Work on mistakes" Click="Click_WorkOnMistakes"/>
		<Button Content="Exit" Click="Click_Exit"/>
	</StackPanel>
</UserControl>
